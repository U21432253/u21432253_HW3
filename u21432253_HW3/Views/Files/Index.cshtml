@model IEnumerable<u21432253_HW3.Models.FileModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="jumbotron">
    <table class="table">
        <tr>
            <th>
                File Name
            </th>
            <th></th>
        </tr>
        @if (Model != null)
        {
            foreach (var file in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => file.FileName)
                    </td>
                    <td>
                        <button class="btn btn-danger"> @Html.ActionLink("Download", "Download", new { name = file.FileName })</button>
                        <button class="btn btn-success"> @Html.ActionLink("Delete", "Delete", new { name = file.FileName })</button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>No Files</td>             
            </tr>
        }


    </table>
</div>