@model IEnumerable<u21432253_HW3.Models.FileModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="jumbotron">
    <div class="row">
        @if (Model != null)
        {
            foreach (var video in Model)
            {

        <div class="col-lg-3">
            <a href="~/Media/Videos/@video.FileName" data-caption="@video.FileName"  data-type="video"  data-fancybox="gallery">
                <video width="320" height="240" controls>
                    <source src="~/Media/Images/@video.FileName" type="video/mp4">

                </video>
                </a>
                <p>@video.FileName</p>
                <button class="btn btn-danger"> @Html.ActionLink("Download", "Download", new { name = video.FileName })</button>
                <button class="btn btn-success"> @Html.ActionLink("Delete", "Delete", new { name = video.FileName })</button>
        </div>

            }
        }
        

    </div>
</div>

